    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Cryptoquote</h1>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <a href="/start" class="btn btn-primary btn-lg">
                    Begin new game
                </a>
            </div>
        </div>
    </div>
